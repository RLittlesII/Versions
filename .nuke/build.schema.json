{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Build Schema",
  "$ref": "#/definitions/build",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "Artifacts": {
          "type": "string",
          "description": "The directory where artifacts are to be dropped"
        },
        "BucketAccessKey": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secret [profile]'"
        },
        "BucketRegion": {
          "type": "string"
        },
        "BucketSecretAccessKey": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secret [profile]'"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration to build",
          "enum": [
            "AdHoc",
            "AppStore",
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Coverage": {
          "type": "string",
          "description": "The directory where coverage artifacts are to be dropped"
        },
        "EnableRestore": {
          "type": "boolean"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "IdentifierSuffix": {
          "type": "string"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "ArchiveIpa",
              "AzurePipelines",
              "Build",
              "BuildiPhone",
              "BuildVersion",
              "Clean",
              "Default",
              "Fastlane",
              "FastlaneMatch",
              "ModifyInfoPlist",
              "Pack",
              "PackiPhone",
              "Restore",
              "SetupKeychain",
              "Test",
              "XamariniOS"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "ArchiveIpa",
              "AzurePipelines",
              "Build",
              "BuildiPhone",
              "BuildVersion",
              "Clean",
              "Default",
              "Fastlane",
              "FastlaneMatch",
              "ModifyInfoPlist",
              "Pack",
              "PackiPhone",
              "Restore",
              "SetupKeychain",
              "Test",
              "XamariniOS"
            ]
          }
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}